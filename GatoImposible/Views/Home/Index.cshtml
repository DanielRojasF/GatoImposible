@{
    ViewBag.Title = "Inicio - Juego Gato Imposible";
}

<div class="container text-center">
    <h1>Bienvenido al Juego Gato Imposible</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Hola, @User.Identity.Name! ¿Listo para jugar?</p>
        <div>
            <a class="btn btn-primary" href="@Url.Action("Game", "Partidas")">Jugar Ahora</a>
        </div>
        <div class="mt-3">
            <a class="btn btn-secondary" href="@Url.Action("Profile", "Usuarios")">Ver Perfil</a>
        </div>
        <div class="mt-3">
            <a class="btn btn-info" href="@Url.Action("History", "Partidas")">Historial de Partidas</a>
        </div>
    }
    else
    {
        <p>Para comenzar a jugar, por favor <a href="@Url.Action("Login", "Usuarios")">inicia sesión</a> o <a href="@Url.Action("Register", "Usuarios")">regístrate</a>.</p>
    }
</div>

@section Scripts {
    <script>
        // Aquí puedes agregar JavaScript para mejorar la interactividad de la página si es necesario
    </script>
}

